    "## 1. Production Configuration\n",
    "\n",
    "Optimal settings for production deployment:"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "def create_production_config():\n",
    "    \"\"\"Create optimized production configuration.\"\"\"\n",
    "    \n",
    "    # Production model configuration\n",
    "    model_config = bitnet.ModelConfig(\n",
    "        use_memory_mapping=True,  # Reduce memory usage\n",
    "        enable_quantization=True,  # Better performance\n",
    "        cache_size_mb=1024,  # Larger cache for production\n",
    "        enable_gpu=True,  # Use GPU if available\n",
    "        gpu_memory_fraction=0.8,  # Reserve some GPU memory\n",
    "    )\n",
    "    \n",
    "    # Production inference configuration\n",
    "    inference_config = bitnet.InferenceConfig(\n",
    "        max_new_tokens=512,\n",
    "        temperature=0.7,\n",
    "        top_p=0.9,\n",
    "        do_sample=True,\n",
    "        batch_size=8,  # Optimize for throughput\n",
    "        enable_streaming=True,\n",
    "        timeout_seconds=30,  # Request timeout\n",
    "    )\n",
    "    \n",
    "    # Production server configuration\n",
    "    server_config = bitnet.ServerConfig(\n",
    "        max_concurrent_requests=100,\n",
    "        request_queue_size=500,\n",
    "        worker_threads=4,\n",
    "        enable_metrics=True,\n",
    "        enable_health_checks=True,\n",
    "        log_level=\"INFO\",\n",
    "        enable_request_logging=True,\n",
    "    )\n",
    "    \n",
    "    return {\n",
    "        \"model\": model_config,\n",
    "        \"inference\": inference_config,\n",
    "        \"server\": server_config\n",
    "    }\n",
    "\n",
    "prod_config = create_production_config()\n",
    "print(\"Production configuration created:\")\n",
    "for section, config in prod_config.items():\n",
    "    print(f\"  {section}: {type(config).__name__}\")"
   ]
  },
