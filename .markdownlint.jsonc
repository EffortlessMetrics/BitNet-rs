{
  "default": true,

  // Line length: use 120; do not enforce in code blocks or tables.
  "MD013": { "line_length": 120, "code_blocks": false, "tables": false, "headings": false },

  // First line heading (release notes, CHANGELOG excerpts often violate this).
  "MD041": false,

  // Trailing punctuation in headings (release titles sometimes need it).
  "MD026": { "punctuation": ".,;:!。，；：" }
}
