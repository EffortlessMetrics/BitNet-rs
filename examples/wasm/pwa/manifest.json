      "purpose": "maskable any"
    }
  ],
  "screenshots": [
    {
      "src": "screenshots/desktop-1.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "BitNet WASM Desktop Interface"
    },
    {
      "src": "screenshots/mobile-1.png",
      "sizes": "375x667",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "BitNet WASM Mobile Interface"
    }
  ],
  "shortcuts": [
    {
      "name": "Quick Inference",
      "short_name": "Inference",
      "description": "Start text generation immediately",
      "url": "/?tab=basic",
      "icons": [
        {
          "src": "icons/shortcut-inference.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Streaming Mode",
      "short_name": "Streaming",
      "description": "Real-time text generation",
      "url": "/?tab=streaming",
      "icons": [
        {
          "src": "icons/shortcut-streaming.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Benchmarks",
      "short_name": "Benchmarks",
      "description": "Test performance on your device",
      "url": "/?tab=benchmark",
      "icons": [
        {
          "src": "icons/shortcut-benchmark.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "handle_links": "preferred",
  "scope": "/",
  "id": "bitnet-wasm-app",
  "protocol_handlers": [
    {
      "protocol": "web+bitnet",
      "url": "/load?model=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/load",
      "accept": {
        "application/octet-stream": [".gguf", ".safetensors", ".bin"],
        "application/x-bitnet-model": [".bitnet"]
      }
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "model",
          "accept": [".gguf", ".safetensors", ".bin", ".bitnet"]
        }
      ]
    }
  }
}
