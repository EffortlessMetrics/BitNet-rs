# Primary BitNet.rs Dockerfile - Optimized for production deployment
# Multi-stage build for minimal image size and security

# Build stage
FROM rust:1.75-slim as builder

# Install build dependencies
RUN apt-get update && apt-get install -y \
    pkg-config \
    libssl-dev \
    cmake \
    build-essential \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Create app directory
WORKDIR /app

# Copy dependency manifests first for better layer caching
COPY Cargo.toml Cargo.lock ./
COPY crates/*/Cargo.toml ./crates/

# Create dummy source files to build dependencies
RUN mkdir -p crates/bitnet-common/src \
    crates/bitnet-models/src \
    crates/bitnet-quantization/src \
    crates/bitnet-kernels/src \
    crates/bitnet-inference/src \
    crates/bitnet-tokenizers/src \
    crates/bitnet-server/src \
    crates/bitnet-cli/src \
    crates/bitnet-ffi/src \
    crates/bitnet-py/src \
    crates/bitnet-wasm/src \
    && echo "fn main() {}" > crates/bitnet-cli/src/main.rs \
    && echo "fn main() {}" > crates/bitnet-server/src/main.rs \
    && find crates -name "*.toml" -exec dirname {} \; | xargs -I {} touch {}/src/lib.rs

# Build dependencies (cached layer)
RUN cargo build --release --bin bitnet-server --bin bitnet-cli
RUN rm -rf crates/*/src

# Copy actual source code
COPY . .

# Build the application with optimizations
RUN cargo build --release --bin bitnet-server --bin bitnet-cli

# Runtime stage - minimal Debian image
FROM debian:bookworm-slim

# Install runtime dependencies
RUN apt-get update && apt-get install -y \
    ca-certificates \
    libssl3 \
    curl \
    && rm -rf /var/lib/apt/lists/* \
    && groupadd -r bitnet \
    && useradd -r -g bitnet -s /bin/false bitnet

# Copy binaries from builder
COPY --from=builder /app/target/release/bitnet-server /usr/local/bin/
COPY --from=builder /app/target/release/bitnet-cli /usr/local/bin/bitnet

# Copy documentation and licenses
COPY --from=builder /app/README.md /app/CHANGELOG.md /usr/share/doc/bitnet/
COPY --from=builder /app/LICENSE* /usr/share/doc/bitnet/

# Create directories for data, configuration, and logs
RUN mkdir -p /etc/bitnet /var/lib/bitnet /var/log/bitnet /app/models \
    && chown -R bitnet:bitnet /var/lib/bitnet /var/log/bitnet /app

# Create default configuration
RUN cat > /etc/bitnet/server.toml << 'EOF'
[server]
host = "0.0.0.0"
port = 8080
max_connections = 1000
timeout = 30

[model]
path = "/app/models/model.gguf"
max_tokens = 2048
batch_size = 512

[inference]
temperature = 0.7
top_p = 0.9
top_k = 40

[performance]
threads = 0  # Auto-detect
use_gpu = false
async_inference = true

[logging]
level = "info"
format = "json"
file = "/var/log/bitnet/server.log"

[metrics]
enabled = true
prometheus_port = 9090
endpoint = "/metrics"

[security]
api_key_required = false
cors_enabled = true
max_request_size = "10MB"
EOF

# Health check script
RUN cat > /usr/local/bin/health-check << 'EOF'
#!/bin/bash
set -e

# Check if server is responding
if curl -f -s http://localhost:8080/health > /dev/null; then
    echo "Server is healthy"
    exit 0
else
    echo "Server health check failed"
    exit 1
fi
EOF
RUN chmod +x /usr/local/bin/health-check

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
    CMD /usr/local/bin/health-check

# Switch to non-root user
USER bitnet
WORKDIR /app

# Expose ports
EXPOSE 8080 9090

# Set environment variables
ENV RUST_LOG=info
ENV RUST_BACKTRACE=1
ENV BITNET_CONFIG=/etc/bitnet/server.toml

# Default command
CMD ["bitnet-server", "--config", "/etc/bitnet/server.toml"]

# Metadata labels
LABEL org.opencontainers.image.title="BitNet.rs"
LABEL org.opencontainers.image.description="High-performance Rust implementation of BitNet 1-bit LLM inference"
LABEL org.opencontainers.image.vendor="BitNet Contributors"
LABEL org.opencontainers.image.licenses="MIT OR Apache-2.0"
LABEL org.opencontainers.image.source="https://github.com/microsoft/BitNet"
LABEL org.opencontainers.image.documentation="https://docs.rs/bitnet"
LABEL org.opencontainers.image.version="1.0.0"
LABEL org.opencontainers.image.created="$(date -u +'%Y-%m-%dT%H:%M:%SZ')"
