# Multi-stage build for CPU-only BitNet deployment
FROM rust:1.75-slim as builder

# Install build dependencies
RUN apt-get update && apt-get install -y \
    pkg-config \
    libssl-dev \
    cmake \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Create app directory
WORKDIR /app

# Copy workspace files
COPY Cargo.toml Cargo.lock ./
COPY crates/ ./crates/

# Build release binary with CPU optimizations
RUN cargo build --release --bin bitnet-cli --features cpu

# Runtime stage
FROM debian:bookworm-slim

# Install runtime dependencies
RUN apt-get update && apt-get install -y \
    ca-certificates \
    libssl3 \
    && rm -rf /var/lib/apt/lists/* \
    && useradd -r -s /bin/false bitnet

# Copy binary from builder
COPY --from=builder /app/target/release/bitnet-cli /usr/local/bin/bitnet

# Create directories for models and config
RUN mkdir -p /app/models /app/config && \
    chown -R bitnet:bitnet /app

# Switch to non-root user
USER bitnet
WORKDIR /app

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD bitnet --version || exit 1

# Default command
ENTRYPOINT ["bitnet"]
CMD ["serve", "--host", "0.0.0.0", "--port", "8080"]

# Labels for metadata
LABEL org.opencontainers.image.title="BitNet CPU"
LABEL org.opencontainers.image.description="BitNet 1-bit LLM inference engine (CPU-only)"
LABEL org.opencontainers.image.vendor="BitNet Project"
LABEL org.opencontainers.image.licenses="MIT"
